<html>
  <head>
    <title>Digest Email</title>
    <link rel="stylesheet" type="text/css" href="/email/header.css" />
  </head>

  <body class="font">
    <div id="logo" class="logo bg-blue">
      <img src="/nav-logo.svg" alt="Maple Logo" />
    </div>
    <header class="header">
      <div>
        <h2 class="headline blue">Here is your
          {{notificationFrequency}}
          report!</h2>
        <p class="subheadline blue center">{{startDate}} - {{endDate}}</p>
      </div>
      <img src="/Mail Report.svg" alt="Maple Logo" />
    </header>

    <section>
      <div class="sectionHeader">
        <h6 class="sectionTitle">Bills</h6>
        <div class="sectionLine"></div>
      </div>
    </section>

    <section>
      <div class="sectionHeader">
        <h6 class="sectionTitle">Organizations</h6>
        <div class="sectionLine"></div>
      </div>
    </section>

    <nav class="navHeader bg-blue white">
      <p class="navText">see more at your</p>
      <button
        onclick="window.location.href='https://mapletestimony.org/';"
        class="navButton bg-blue"
      >
        <!-- add link to newsfeed page on maple website when available -->
        <img src="/Newsfeed Icon.svg" alt="Newsfeed Icon" />
        <p class="navButtonText white">Newsfeed</p>
      </button>
    </nav>

    <footer>Legal Stuff</footer>
  </body>
</html>

